<Window x:Class="corridor_danil_shafiev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:corridor_danil_shafiev" xmlns:modelview="clr-namespace:corridor_danil_shafiev.ModelView" d:DataContext="{d:DesignInstance Type=modelview:MV}"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="900">
    <Canvas Name="canvas" Height="800" Width="800" Background="White" MouseLeftButtonDown="clickOnCanvas">

        <ItemsControl ItemsSource="{Binding Stones}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Ellipse Fill="Red" Width="90" Height="90" Margin="{Binding Path=Margin}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <Line X1="0" X2="0" Y1="0" Y2="800" Stroke="Black"/>
        <Line X1="100" X2="100" Y1="0" Y2="800" Stroke="Black"/>
        <Line X1="200" X2="200" Y1="0" Y2="800" Stroke="Black"/>
        <Line X1="300" X2="300" Y1="0" Y2="800" Stroke="Black"/>
        <Line X1="400" X2="400" Y1="0" Y2="800" Stroke="Black"/>
        <Line X1="500" X2="500" Y1="0" Y2="800" Stroke="Black"/>
        <Line X1="600" X2="600" Y1="0" Y2="800" Stroke="Black"/>
        <Line X1="700" X2="700" Y1="0" Y2="800" Stroke="Black"/>
        <Line X1="800" X2="800" Y1="0" Y2="800" Stroke="Black"/>
        
        <Line X1="000" X2="800" Y1="0" Y2="0" Stroke="Black"/>
        <Line X1="000" X2="800" Y1="100" Y2="100" Stroke="Black"/>
        <Line X1="000" X2="800" Y1="200" Y2="200" Stroke="Black"/>
        <Line X1="000" X2="800" Y1="300" Y2="300" Stroke="Black"/>
        <Line X1="000" X2="800" Y1="400" Y2="400" Stroke="Black"/>
        <Line X1="000" X2="800" Y1="500" Y2="500" Stroke="Black"/>
        <Line X1="000" X2="800" Y1="600" Y2="600" Stroke="Black"/>
        <Line X1="000" X2="800" Y1="700" Y2="700" Stroke="Black"/>
        <Line X1="000" X2="800" Y1="800" Y2="800" Stroke="Black"/>
    </Canvas>
</Window>
